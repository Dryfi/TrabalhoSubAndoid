<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trabalhosub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <!-- MainActivity precisa de 'android:exported' para Android 12 e superior -->
        <activity android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- CadastroAlunoActivity -->
        <activity android:name=".view.CadastroAlunoActivity"
            android:exported="false" />

        <!-- ListaAlunosActivity -->
        <activity android:name=".view.ListaAlunosActivity"
            android:exported="true" />

    </application>

</manifest>